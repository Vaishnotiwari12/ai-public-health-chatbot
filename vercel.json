{
  "version": 2,
  "builds": [
    {
      "src": "frontend/pulse_command_center/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd frontend/pulse_command_center && npm install",
        "buildCommand": "cd frontend/pulse_command_center && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    }
  ]
}
