# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Max requests per window

# Security
REQUEST_BODY_LIMIT=10kb

# Application
APP_NAME=AI Public Health Chatbot
APP_VERSION=1.0.0

# Session (if needed in the future)
# SESSION_SECRET=your_session_secret_here
# SESSION_MAX_AGE=86400000  # 24 hours

# Cache (if needed in the future)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600  # 1 hour

# Monitoring (if needed in the future)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Email (if needed in the future)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=your_smtp_password
# EMAIL_FROM=noreply@example.com
